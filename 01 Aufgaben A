CREATE TABLE product_category (id INT PRIMARY KEY, name VARCHAR(100));
CREATE TABLE product (
	id INT PRIMARY KEY,
	category_id INT NOT NULL,
	name VARCHAR(100)
);
CREATE TABLE user(
	id INT PRIMARY KEY,
	vorname VARCHAR(100),
	name VARCHAR(100),
  lieblingsprodukt INT NOT NULL,
	FOREIGN KEY (lieblingsprodukt) REFERENCES product(id)
);
